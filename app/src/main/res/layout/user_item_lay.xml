<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="70dp"
    android:layout_marginRight="70dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/buttons_background"

    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
    >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_search"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profile"
            android:padding="12dp"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/user_name_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:layout_below="@+id/profile_search"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:padding="5dp"
            />
        <TextView
            android:id="@+id/user_full_name_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Profile Name"
            android:layout_below="@+id/user_name_search"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"
            android:padding="1dp"
            />
        <Button
            android:id="@+id/follow_btn_search"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@+id/user_full_name_search"
            android:text="Follow"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            />
    </RelativeLayout>

</RelativeLayout>