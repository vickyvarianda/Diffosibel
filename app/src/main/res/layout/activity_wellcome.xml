<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".WellcomeActivity">

    <ImageView
        android:id="@+id/image_well"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/new_wellcome"
        />
    <TextView
        android:id="@+id/text_well"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_well"
        android:textColor="@color/colorPrimary"
        android:text="V 1.0"
        android:textSize="10dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/signin_btn_choice"
        android:text="Sign In"
        android:textColor="@color/white"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_well"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:background="@color/colorPrimary"
        android:textAllCaps="false"
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/signup_btn_choice"
        android:text="Doesn't have an Account? Sign Up"
        android:textColor="@color/colorPrimary"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signin_btn_choice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/buttons_background"
        android:layout_marginBottom="10dp"
        android:textAllCaps="false"
        android:textSize="16dp"
        />
</RelativeLayout>